<TextView
    android:id="@+id/textView50"
    android:layout_width="290dp"
    android:layout_height="43dp"
    android:layout_marginStart="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="200dp"
    android:layout_marginEnd="50dp"
